---
interface Props {
  title: string;
  summary: string;
  tech: string[];
  year: number;
  image: string;
  url?: string;
  repo?: string;
  caseStudySlug?: string;
}

const { title, summary, tech, year, image, url, repo, caseStudySlug } = Astro.props;

const primaryLink = caseStudySlug ? `/case-studies/${caseStudySlug}` : url || repo;
---

<article
  class="card-hover group relative overflow-hidden"
  data-stagger-item
  data-tilt
  data-tilt-max="4"
  data-tilt-scale="1.01"
  data-tilt-glare
>
  <!-- Image -->
  <div class="aspect-video overflow-hidden rounded-t-2xl">
    <img
      src={image}
      alt={`${title} screenshot`}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
      style="transition-timing-function: cubic-bezier(0.22, 1, 0.36, 1);"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="space-y-5 p-6">
    <!-- Header -->
    <div class="flex items-start justify-between gap-4">
      <h3
        class="font-heading text-2xl font-semibold leading-tight tracking-tight"
        style="color: var(--text-primary);"
      >
        {title}
      </h3>
      <span
        class="shrink-0 rounded-lg px-3 py-1.5 text-xs font-semibold"
        style="background-color: var(--bg-elevated); color: var(--text-muted);"
      >
        {year}
      </span>
    </div>

    <!-- Summary -->
    <p class="leading-relaxed" style="color: var(--text-secondary);">
      {summary}
    </p>

    <!-- Tech stack -->
    <div class="flex flex-wrap gap-2">
      {
        tech.map((item) => (
          <span
            class="rounded-lg px-3 py-1.5 text-xs font-medium"
            style="background-color: var(--bg-elevated); color: var(--text-secondary); border: 1px solid var(--border);"
          >
            {item}
          </span>
        ))
      }
    </div>

    <!-- Links -->
    <div class="flex flex-wrap gap-3 pt-2">
      {
        primaryLink && (
          <a
            href={primaryLink}
            class="btn-primary text-sm"
            data-magnetic
            {...(caseStudySlug ? {} : { target: '_blank', rel: 'noopener noreferrer' })}
          >
            {caseStudySlug ? 'View Case Study' : 'View Project'}
            <svg
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              />
            </svg>
          </a>
        )
      }
      {
        repo && (
          <a
            href={repo}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary text-sm"
            aria-label="View GitHub repository"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            GitHub
          </a>
        )
      }
    </div>
  </div>
</article>

