---
import '@/styles/globals.css';
import ParticleField from '@/components/3d/ParticleField';
import CustomCursor from '@/components/CustomCursor';

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const {
  title = 'Kalen Young - Developer & Designer',
  description = 'Exploring the frontiers of the web. I build modern, accessible experiences with performance and detail.',
  image = '/og.png',
  article = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en" class="scrollbar-custom">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Theme initialization script (runs before render to prevent flash) -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined') {
          const stored = localStorage.getItem('theme');
          if (stored) return stored;
        }
        // Default to light theme
        return 'light';
      })();
      document.documentElement.setAttribute('data-theme', theme);
    </script>
  </head>
  <body>
    <!-- Custom cursor -->
    <CustomCursor client:load />

    <!-- Skip to main content link for accessibility -->
    <a href="#main" class="skip-link">Skip to main content</a>

    <!-- Background particle field -->
    <ParticleField client:idle count={150} speed={0.3} />

    <slot />

    <!-- Initialize animations and 3D effects -->
    <script>
      import { initAnimations, initLanternGlow } from '@/utils/animations';
      import { initAllTilts } from '@/utils/3d-transforms';

      // Wait for DOM to be ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          initAnimations();
          initLanternGlow();
          initAllTilts();
        });
      } else {
        initAnimations();
        initLanternGlow();
        initAllTilts();
      }
    </script>
  </body>
</html>

